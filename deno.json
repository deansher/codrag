{
    "tasks": {
      "start": "deno run --allow-net --allow-read --allow-env src/main.ts",
      "dev": "deno run --watch --allow-net --allow-read --allow-env src/main.ts",
      "test": "deno test --allow-net --allow-read --allow-env",
      "lint": "deno lint",
      "fmt": "deno fmt"
    },
    "imports": {
      "@/": "./src/"
    },
    "fmt": {
      "files": {
        "include": ["src/"]
      },
      "options": {
        "lineWidth": 80,
        "indentWidth": 2,
        "singleQuote": true
      }
    }
  }
  